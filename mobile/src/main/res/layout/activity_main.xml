<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white">

    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue_1"
        android:gravity="left|center_vertical"
        android:textSize="18sp"
        android:id="@+id/enterNoLabel"
        android:layout_margin="10dp"
        android:text="@string/enter_no"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue_1"
        android:textSize="18sp"
        android:imeOptions="actionNext"
        android:imeActionLabel="@+id/edt2"
        android:inputType="phone"
        android:hint="@string/hint_no"
        android:padding="5dp"
        android:textColorHint="@color/gray_1"
        android:gravity="left|center_vertical"
        android:layout_alignLeft="@+id/enterNoLabel"
        android:layout_below="@+id/enterNoLabel"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue_1"
        android:textSize="18sp"
        android:inputType="phone"
        android:imeOptions="actionNext"
        android:hint="@string/hint_no"
        android:imeActionLabel="@+id/edt3"
        android:padding="5dp"
        android:textColorHint="@color/gray_1"
        android:gravity="left|center_vertical"
        android:layout_alignLeft="@+id/enterNoLabel"
        android:layout_alignRight="@+id/edt1"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="10dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue_1"
        android:textSize="18sp"
        android:inputType="phone"
        android:hint="@string/hint_no"
        android:padding="5dp"
        android:imeOptions="actionNext"
        android:textColorHint="@color/gray_1"
        android:gravity="left|center_vertical"
        android:layout_alignLeft="@+id/enterNoLabel"
        android:layout_below="@+id/edt2"
        android:layout_marginTop="10dp"
        android:imeActionId="@+id/edt4"
        android:layout_alignRight="@+id/edt1" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:maxLines="6"
        android:ems="10"
        android:id="@+id/edt4"
        android:imeOptions="actionDone"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue_1"
        android:hint="@string/hint_msg"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/edt1"
        android:layout_alignRight="@+id/edt1"
        android:layout_below="@+id/edt3"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_stylesheet"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/save"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>
